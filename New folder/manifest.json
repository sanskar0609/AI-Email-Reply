{
    "name": "Email writer Assistant",
    "description": "AI powered email writer assistant",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": ["activeTab","storage"],
    "host_permissions": ["http://localhost:7070/*",
             "*://mail.google.com/*"],
             "content_scripts": [
                {
                  "js": ["content.js" ],
                  "matches": [ "*://mail.google.com/*"],
                  "css": ["content.css"],
                  "run_at": "document_end"
                }
             ],
             "web_accessible_resources": [
                {
                "resources": [ "icon/*"],
                "matches": [ "*://mail.google.com/*" ]
                }
  ],
    "action": {
      "default_title": "email writer assistance"
     
    }
  }